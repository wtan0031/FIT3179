{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A radial chart with Education Earnings data.",
  "data": {
    "url": "https://raw.githubusercontent.com/wtan0031/FIT3179/main/Radial/data/Earnings.csv"
  },
  "width": "container",
  "height": 300,
  "layer": [
    {"mark": {"type": "arc", "innerRadius": 20, "stroke": "#fff"}},
    {
      "mark": {"type": "text", "radiusOffset": 10},
      "encoding": {
        "text": {"field": "Median usual weekly earnings", "type": "nominal"}
      }
    }
  ],
  "encoding": {
    "theta": {
      "field": "Median usual weekly earnings",
      "type": "quantitative",
      "stack": true
    },
    "radius": {
      "field": "Median usual weekly earnings",
      "scale": {"type": "sqrt", "zero": true, "rangeMin": 20}
    },
    "color": {
      "field": "Education Attainment",
      "type": "nominal",
      "scale": {
        "domain": [
          "Doctoral Degree",
          "Master's Degree",
          "Bachelor's Degree",
          "Some College, no degree",
          "High School Diploma",
          "Less than High School Diploma"
        ],
        "range": [
          "rgb(0,73,150)",
          "rgb(37,128,255)",
          "rgb(129,0,129)",
          "rgb(255,102,0)",
          "rgb(255,0,0)",
          "rgb(217,13,98)"
        ]
      }
    },
    "tooltip": [
      {
        "field": "Education Attainment",
        "type": "nominal",
        "title": "Education Attainment"
      },
      {
        "field": "Unemployment Rate",
        "type": "nominal",
        "title": "Unemployment Rate (%) "
      }
    ]
  },
  "view": {"stroke": null},
  "config": {}
}
